[gd_resource type="ShaderMaterial" load_steps=2 format=2]

[sub_resource type="Shader" id=1]
code = "shader_type spatial;

uniform sampler2DArray atlas_array: hint_albedo;
uniform sampler2D atlas_data;

varying vec2 rect_size;
varying float atlas_w;

void vertex() {
	float u = COLOR.r;
	
	float atlas_depth = float(textureSize(atlas_array, 0).z - 1);
	atlas_w = u * atlas_depth;
	
	vec4 rect = texture(atlas_data, vec2(u, 0.0));
	rect_size = rect.xy;
}

void fragment() {
	
	vec2 world_uv = UV;
	world_uv = mod(world_uv, 1.0);
	world_uv *= rect_size;
	
	ALBEDO = texture(atlas_array, vec3(world_uv, atlas_w)).xyz;
	METALLIC = 0.0;
	SPECULAR = 0.0;
	ROUGHNESS = 1.0;
}
"

[resource]
shader = SubResource( 1 )
